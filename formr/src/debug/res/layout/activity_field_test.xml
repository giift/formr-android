<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FieldsTestActivity">

    <LinearLayout
        android:id="@+id/linearView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.giift.formr.field.ButtonChoice
            android:id="@+id/buttonChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.CardNumber
            android:id="@+id/cardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Checkbox
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Cvv
            android:id="@+id/cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Date
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Day
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Dropdown
            android:id="@+id/dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Email
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Hidden
            android:id="@+id/hidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Month
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Number
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Onoff
            android:id="@+id/onoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Password
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.PersonName
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Phone
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.PostalAddress
            android:id="@+id/postal_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Separator
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Slider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Text
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.TextArea
            android:id="@+id/text_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Url
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Year
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.giift.formr.field.Zip
            android:id="@+id/zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
